{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2018",
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "react",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": "./",
        "strict": false,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "skipLibCheck": true
        //---
        // "lib": [
        //     "dom",
        //     "es6"
        // ],
        // "resolveJsonModule": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "es",
        "dist",
        "webconfig.config.js",
        "test"
    ]
}