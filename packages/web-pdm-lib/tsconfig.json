{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "jsx": "react",
        "esModuleInterop": true,
        "sourceMap": true,
        "baseUrl": "./",
        "strict": false,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "skipLibCheck": true
    },
    "include": [
        "src/*.js",
        "src/*.tsx",
        "src/**/*.tsx"
    ]
}